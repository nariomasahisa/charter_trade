<%= render "shared/header" %>
<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|%>
      <%= devise_error_messages!%>
      <div class='field'>
        <div class='field-label'>
          <%= f.label :username, 'アカウント名'%>
        </div>
        <div class='field-input'>
          <%= f.text_field :username, autofocus: true%>
        </div>
      </div>
      <div class='field'>
        <div class='field-label'>
          <%= f.label :email, 'メールアドレス'%>
        </div>
        <div class='field-input'>
          <%= f.email_field :email%>
        </div>
      </div>
      <div class='field'>
        <div class='field-label'>
            <%= f.label :password, 'パスワード'%>
          <i>(英数字8文字以上)</i>
        </div>
        <div class='field-input'>
          <%= f.password_field :password, autocomplete: "off"%>
        </div>
      </div>
      <div class='field'>
        <div class='field-label'>
          <%= f.label :password_confirmation, 'パスワード<確認用>'%>
        </div>
        <div class='field-input'>
          <%= f.password_field :password_confirmation, autocomplete: "off"%>
        </div>
      </div>
      <div class='field'>
        <div class='field-label'>
          <%= f.label :phone_number, "電話番号"%>
        </div>
        <div class='field-input'>
          <%= f.text_field :phone_number, autofocus: true%>
        </div>
      </div>
      <div class='field'>
        <div class='field-label'>
          <%= f.label :prefecture_address, "都道府県"%>
        </div>
        <div class='field-input'>
          <%= f.text_field :prefecture_address, autofocus: true%>
        </div>
      </div>
      <div class='field'>
        <div class='field-label'>
          <%= f.label :city_address, "市区町村"%>
        </div>
        <div class='field-input'>
          <%= f.text_field :city_address, autofocus: true%>
        </div>
      </div>
      <div class='field'>
        <div class='field-label'>
          <%= f.label :house_number, "番地までの住所"%>
        </div>
        <div class='field-input'>
          <%= f.text_field :house_number, autofocus: true%>
        </div>
      </div>
      <div class='actions'>
        <%= f.submit "アカウントを作成します", class: 'btn', id: 'btn'%>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>