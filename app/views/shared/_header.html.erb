<link href="https://fonts.googleapis.com/css?family=Bangers" rel="stylesheet">
<header class="top-page-header">
  <h1 class='app-name'>Charter Trader</h1>
  <div class="header-menu">
    <ul class='sign_in_up_lists'>
      <li><%= link_to 'チャーターをご要望の方', '#', class: "new-charter" %></li> 
      <% if user_signed_in? %>
        <li><%= link_to current_user.username, "#", class: "log-in" %></li> 
        <li><%= link_to 'ログアウト', destroy_user_session_path, class: "log-in", method: :delete %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "log-in"%></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up"%></li>
      <% end %>
    </ul>
  </div>
</header>