<header class="top-page-header">
  <h1 class='app-name'>
    <%= link_to "Charter Trader", root_path,class:'app-name'%>
  </h1>
  <div class="header-menu">
    <ul class='sign_in_up_lists'>
      <li><%= link_to 'チャーターをご要望の方', new_charter_path, class: "new-charter" %></li> 
      <% if user_signed_in? %>
        <li><%= link_to current_user.username, user_path(current_user), class: "log-in" %></li> 
        <li><%= link_to 'ログアウト', destroy_user_session_path, class: "log-in", method: :delete %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "log-in"%></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up"%></li>
      <% end %>
    </ul>
  </div>
</header>