  <div class='charter_bar'>
    <div class="charter_header">
    チャーター便一覧
    </div>
    <div class="charter_main">
      <div class="charter_lists">
        <% @charters.each do |charter| %>
          <div class='charter-name'>
            <%= link_to "#{charter.departure}→#{charter.arrive}", charter_path(charter),class:'charter-name'%>
          </div>
          <%= link_to "発注者:#{charter.user.username}", user_path(charter.user),  class: "name-link" %>
        <% end %> 
      </div>
    </div>
  </div>